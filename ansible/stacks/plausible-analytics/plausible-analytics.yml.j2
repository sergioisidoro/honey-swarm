
   
version: "3.3"
services:
  mail:
    image: bytemark/smtp
    restart: always
    networks:
      - plausible-analytics-network

  plausible_db:
    image: postgres:12
    restart: always
    volumes:
      - db-data:/var/lib/postgresql/data
    environment:
      - POSTGRES_PASSWORD=postgres
    networks:
      - plausible-analytics-network

  plausible_events_db:
    image: yandex/clickhouse-server:21.3.2.5
    restart: always
    volumes:
      - event-data:/var/lib/clickhouse
      - ./clickhouse/clickhouse-config.xml:/etc/clickhouse-server/config.d/logging.xml:ro
      - ./clickhouse/clickhouse-user-config.xml:/etc/clickhouse-server/users.d/logging.xml:ro
    ulimits:
      nofile:
        soft: 262144
        hard: 262144
    networks:
      - plausible-analytics-network

  plausible:
    image: plausible/analytics:latest
    restart: always
    command: sh -c "sleep 10 && /entrypoint.sh db createdb && /entrypoint.sh db migrate && /entrypoint.sh db init-admin && /entrypoint.sh run"
    depends_on:
      - plausible_db
      - plausible_events_db
      - mail
    ports:
      - 8000
    labels:
      - traefik.enable=true
      - traefik.http.services.swarmpit.loadbalancer.server.port=8000
      - traefik.http.routers.swarmpit.rule=Host(`analytics.{{ domains.main }}`)
      - traefik.http.routers.swarmpit.entrypoints=http,https
    networks:
      - plausible-analytics-network
      - traefik-public

volumes:
  db-data:
    driver: local
  event-data:
    driver: local
  geoip:
    driver: local

networks:
  plausible-analytics-network:
  traefik-public:
    external: true
